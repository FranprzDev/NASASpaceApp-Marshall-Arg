---
import PawPatrolModel from "./pawpatrolmodel/PawPatrolModel";
---

<section class="box skills">
  <div class="stack gap-2 lg:gap-4 redirect">
    <h2>Exploring Exo Planets</h2>
    <div class="">
      <PawPatrolModel name="rocky" client:load />
    </div>
    <p>Explore Exo Planets with Rocky</p>
  </div>
  <div class="stack gap-2 lg:gap-4 redirect">
    <h2>Discovering Exo Planets</h2>
    <div class="">
      <PawPatrolModel name="everest" client:load />
    </div>
    <p>Discover with Everest</p>
  </div>
</section>

<style>
  .box {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
    perspective: 1000px;
  }

  .redirect {
    cursor: pointer;
    box-shadow: var(--shadow-md);
    text-align: center;
    padding-left: 10px;
    padding-right: 10px;
  }
  .superIcon {
    height: 60px;
    width: 60px;
  }

  .skills {
    display: flex !important;
    flex-direction: row !important;
    justify-content: center !important;
  }

  @media (min-width: 50em) {
    .box {
      border-radius: 1.5rem;
      padding: 2.5rem;
    }

    .skills {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 5rem;
    }

    .skills h2 {
      font-size: var(--text-2xl);
    }
  }

  @media (max-width: 50em) {
    .skills h2 {
      font-size: var(--text-xl);
    }
  }
</style>
