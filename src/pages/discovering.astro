---
import BaseLayout from '../layouts/BaseLayout.astro';
interface Game {
  name: string;
  image: string;
  description: string;
}

const games: Game[] = [
  {
    name: "Find-An-Exo",
    image: "/placeholder.svg?height=200&width=300",
    description: "Spot shadows in front of stars to find exoplanets using the Transit method.",
  },
  {
    name: "Spectral Match",
    image: "/placeholder.svg?height=200&width=300",
    description: "Match planets to elements by analyzing their light spectrum in this interactive puzzle.",
  },
  {
    name: "Balancing Planets",
    image: "/placeholder.svg?height=200&width=300",
    description: "Determine exoplanet masses using a planet-sized balance scale. How many Earths does it take?",
  },
  {
    name: "Cosmic Crusade",
    image: "/placeholder.svg?height=200&width=300",
    description: "Épica batalla intergaláctica por el destino del universo",
  },
];
---

<BaseLayout>
  <div class="container">
    {games.map((game) => (
      <div class="card">
        <img src={game.image} alt={game.name} class="game-image" />
        <h2>{game.name}</h2>
        <p>{game.description}</p>
      </div>
    ))}
  </div>
</Balancing>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .card {
    background-image: url("/assets/backgrounds/bg-subtle-2-dark-1440w");
    background-size: cover;
    background-position: center;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    border: 2px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .game-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 15px;
  }

  .card h2 {
    margin: 0 0 10px;
    font-size: 1.2rem;
    color: #ffffff;
  }

  .card p {
    margin: 0 0 15px;
    font-size: 1rem;
    color: #cccccc;
    flex-grow: 1;
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }
  }
</style>