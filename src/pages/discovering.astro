---
import BaseLayout from "../layouts/BaseLayout.astro";

interface Game {
  name: string;
  image: string;
  description: string;
}

const games: Game[] = [
  {
    name: "Ethereal Quest",
    image: "/placeholder.svg?height=200&width=300",
    description: "Un viaje mágico a través de reinos oníricos",
  },
  {
    name: "Balancing Planets",
    image: "/placeholder.svg?height=200&width=300",
    description: "Aventura cyberpunk en una metrópolis futurista",
  },
  {
    name: "Verdant Voyage",
    image: "/placeholder.svg?height=200&width=300",
    description: "Explora ecosistemas vibrantes en un mundo verde",
  },
  {
    name: "Cosmic Crusade",
    image: "/placeholder.svg?height=200&width=300",
    description: "Épica batalla intergaláctica por el destino del universo",
  },
];
---

<BaseLayout>
  <div class="container">
    <div class="grid">
      {
        games.map((game) => (
          <div class="card">
            <div class="image-container">
              <img
                src={game.image}
                alt={game.name}
                class="image"
              />
            </div>
            <div class="content">
              <h3 class="title">{game.name}</h3>
              <p class="description">{game.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .card {
    background-color: url("public/assets/backgrounds/bg-subtle-2-dark-1440w");
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1);
    transform: translateY(-0.25rem);
  }

  .image-container {
    padding: 0;
  }

  .image {
    width: 100%;
    height: 12rem;
    object-fit: cover;
  }

  .content {
    padding: 1rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .description {
    font-size: 0.875rem;
    color: #4a5568;
  }
</style>